{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "System",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "temp",
  },
  "include": ["src/**/*.ts"]
}
